<UserControl x:Class="ModernWPFApp.Views.AboutView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">

    <Grid Margin="16">
        <materialDesign:Card Padding="32">
            <StackPanel HorizontalAlignment="Center">
                
                <!-- App Icon -->
                <materialDesign:PackIcon Kind="City" 
                                       Width="80" 
                                       Height="80" 
                                       Foreground="{DynamicResource PrimaryHueMidBrush}"
                                       Margin="0,0,0,24"/>
                
                <!-- App Name -->
                <TextBlock Text="Bauverwaltungssystem" 
                          FontSize="28" 
                          FontWeight="Bold"
                          HorizontalAlignment="Center"
                          Margin="0,0,0,8"/>
                
                <!-- Version -->
                <TextBlock Text="Version 1.0.0" 
                          FontSize="16"
                          HorizontalAlignment="Center"
                          Foreground="{DynamicResource MaterialDesignBodyLight}"
                          Margin="0,0,0,24"/>
                
                <!-- Description -->
                <TextBlock Text="Moderne WPF-Anwendung für die Verwaltung von Bauprojekten, Kunden, Angeboten und Rechnungen."
                          FontSize="14"
                          HorizontalAlignment="Center"
                          TextWrapping="Wrap"
                          MaxWidth="400"
                          Margin="0,0,0,32"/>
                
                <!-- Features -->
                <StackPanel Orientation="Horizontal" 
                           HorizontalAlignment="Center"
                           Margin="0,0,0,32">
                    
                    <materialDesign:Card Margin="8" Padding="16" Width="120">
                        <StackPanel>
                            <materialDesign:PackIcon Kind="AccountMultiple" 
                                                   Width="32" Height="32"
                                                   HorizontalAlignment="Center"
                                                   Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                            <TextBlock Text="Kunden" 
                                      HorizontalAlignment="Center"
                                      Margin="0,8,0,0"/>
                        </StackPanel>
                    </materialDesign:Card>
                    
                    <materialDesign:Card Margin="8" Padding="16" Width="120">
                        <StackPanel>
                            <materialDesign:PackIcon Kind="City" 
                                                   Width="32" Height="32"
                                                   HorizontalAlignment="Center"
                                                   Foreground="{DynamicResource SecondaryHueMidBrush}"/>
                            <TextBlock Text="Baustellen" 
                                      HorizontalAlignment="Center"
                                      Margin="0,8,0,0"/>
                        </StackPanel>
                    </materialDesign:Card>
                    
                    <materialDesign:Card Margin="8" Padding="16" Width="120">
                        <StackPanel>
                            <materialDesign:PackIcon Kind="FileDocument" 
                                                   Width="32" Height="32"
                                                   HorizontalAlignment="Center"
                                                   Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                            <TextBlock Text="Angebote" 
                                      HorizontalAlignment="Center"
                                      Margin="0,8,0,0"/>
                        </StackPanel>
                    </materialDesign:Card>
                    
                </StackPanel>
                
                <!-- Copyright -->
                <Separator Margin="0,0,0,16"/>
                
                <TextBlock Text="© 2024 Bauverwaltungssystem"
                          FontSize="12"
                          HorizontalAlignment="Center"
                          Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                
                <TextBlock Text="Entwickelt mit WPF und Material Design"
                          FontSize="12"
                          HorizontalAlignment="Center"
                          Foreground="{DynamicResource MaterialDesignBodyLight}"
                          Margin="0,4,0,0"/>
                
            </StackPanel>
        </materialDesign:Card>
    </Grid>
</UserControl>
