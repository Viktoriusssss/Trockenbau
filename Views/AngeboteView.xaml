<UserControl x:Class="ModernWPFApp.Views.AngeboteView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">

    <Grid Margin="16">
        <materialDesign:Card Padding="16">
            <StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                    <materialDesign:PackIcon Kind="FileDocument" Width="24" Height="24" 
                                           VerticalAlignment="Center"
                                           Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                    <TextBlock Text="Angebotsverwaltung" FontSize="20" FontWeight="Medium" 
                              VerticalAlignment="Center" Margin="8,0,0,0"/>
                </StackPanel>
                
                <TextBlock Text="Hier kÃ¶nnen Sie Angebote erstellen, verwalten und verfolgen." 
                          Margin="0,0,0,16"/>
                
                <Button Style="{StaticResource MaterialDesignRaisedButton}" 
                       HorizontalAlignment="Left">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Plus" Width="16" Height="16"/>
                        <TextBlock Text="Neues Angebot erstellen" Margin="8,0,0,0"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </materialDesign:Card>
    </Grid>
</UserControl>
