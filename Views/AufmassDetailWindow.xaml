<Window x:Class="ModernWPFApp.Views.AufmassDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:converters="clr-namespace:ModernWPFApp.Converters"
        Title="Aufmaß Details"
        Height="800" Width="1420"
        WindowStartupLocation="CenterOwner"
        WindowState="Maximized"
        Style="{StaticResource MaterialDesignWindow}">
    
    <Window.Resources>
        <converters:EuroConverter x:Key="EuroConverter"/>
        <converters:UnitConverter x:Key="UnitConverter"/>
    </Window.Resources>
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="{Binding Aufmass.Titel}" 
                      FontSize="24" FontWeight="Bold" 
                      Margin="0,0,0,10"/>
            <TextBlock Text="{Binding Aufmass.Nummer}" 
                      FontSize="16" 
                      Foreground="Gray"
                      Margin="0,0,0,5"/>
            <TextBlock Text="{Binding Aufmass.Beschreibung}" 
                      FontSize="14" 
                      Foreground="Gray"/>
        </StackPanel>
        
                          <!-- Add Position Form -->
         <GroupBox Grid.Row="1" Header="Neue Position hinzufügen" Margin="0,0,0,20">
             <Grid Margin="10">
                 <Grid.ColumnDefinitions>
                     <ColumnDefinition Width="Auto"/>
                     <ColumnDefinition Width="*"/>
                     <ColumnDefinition Width="*"/>
                     <ColumnDefinition Width="*"/>
                     <ColumnDefinition Width="*"/>
                     <ColumnDefinition Width="*"/>
                     <ColumnDefinition Width="Auto"/>
                 </Grid.ColumnDefinitions>
                 <Grid.RowDefinitions>
                     <RowDefinition Height="Auto"/>
                     <RowDefinition Height="Auto"/>
                 </Grid.RowDefinitions>
                 
                 <!-- First Row -->
                 <TextBox Grid.Row="0" Grid.Column="0" 
                          materialDesign:HintAssist.Hint="Position"
                          Text="{Binding NewPosition, UpdateSourceTrigger=PropertyChanged}"
                          Style="{StaticResource MaterialDesignOutlinedTextBox}"
                          Height="50"
                          Margin="0,0,5,0"/>
                 
                 <TextBox Grid.Row="0" Grid.Column="1" 
                          materialDesign:HintAssist.Hint="Beschreibung"
                          Text="{Binding NewBeschreibung, UpdateSourceTrigger=PropertyChanged}"
                          Style="{StaticResource MaterialDesignOutlinedTextBox}"
                          Height="50"
                          Margin="5,0"/>
                 
                 <TextBox Grid.Row="0" Grid.Column="2" 
                          materialDesign:HintAssist.Hint="Länge (m)"
                          Text="{Binding NewLänge, UpdateSourceTrigger=PropertyChanged}"
                          Style="{StaticResource MaterialDesignOutlinedTextBox}"
                          Height="50"
                          Margin="5,0"/>
                 
                 <TextBox Grid.Row="0" Grid.Column="3" 
                          materialDesign:HintAssist.Hint="Breite (m)"
                          Text="{Binding NewBreite, UpdateSourceTrigger=PropertyChanged}"
                          Style="{StaticResource MaterialDesignOutlinedTextBox}"
                          Height="50"
                          Margin="5,0"/>
                 
                 <TextBox Grid.Row="0" Grid.Column="4" 
                          materialDesign:HintAssist.Hint="Höhe (m)"
                          Text="{Binding NewHöhe, UpdateSourceTrigger=PropertyChanged}"
                          Style="{StaticResource MaterialDesignOutlinedTextBox}"
                          Height="50"
                          Margin="5,0"/>
                 
                 <TextBox Grid.Row="0" Grid.Column="5" 
                          materialDesign:HintAssist.Hint="Std"
                          Text="{Binding NewStd, UpdateSourceTrigger=PropertyChanged}"
                          Style="{StaticResource MaterialDesignOutlinedTextBox}"
                          Height="50"
                          Margin="5,0"/>
                 
                 <Button Grid.Row="0" Grid.Column="6" 
                         Content="{Binding ButtonText}"
                         Command="{Binding AddOrUpdatePositionCommand}"
                         Style="{StaticResource MaterialDesignRaisedButton}"
                         Margin="5,0,0,0"/>
                 
                 <!-- Second Row -->
                 <TextBox Grid.Row="1" Grid.Column="0" 
                          materialDesign:HintAssist.Hint="Stück"
                          Text="{Binding NewStück, UpdateSourceTrigger=PropertyChanged}"
                          Style="{StaticResource MaterialDesignOutlinedTextBox}"
                          Height="50"
                          Margin="0,10,5,0"/>
                 
                 <TextBox Grid.Row="1" Grid.Column="1" 
                          materialDesign:HintAssist.Hint="Lfm"
                          Text="{Binding NewLfm, UpdateSourceTrigger=PropertyChanged}"
                          Style="{StaticResource MaterialDesignOutlinedTextBox}"
                          Height="50"
                          Margin="5,10,0,0"/>
                 
                 <TextBox Grid.Row="1" Grid.Column="2" 
                          materialDesign:HintAssist.Hint="Gesamt Menge"
                          Text="{Binding GesamtMengeDisplay, Mode=OneWay}"
                          Style="{StaticResource MaterialDesignOutlinedTextBox}"
                          Height="50"
                          Margin="5,10,0,0"
                          IsReadOnly="True"
                          Background="LightGray"/>
                 
                 <TextBox Grid.Row="1" Grid.Column="3" 
                          materialDesign:HintAssist.Hint="EP (€)"
                          Text="{Binding NewEinzelpreis, UpdateSourceTrigger=PropertyChanged}"
                          Style="{StaticResource MaterialDesignOutlinedTextBox}"
                          Height="50"
                          Margin="5,10,0,0"/>
                 
                 <TextBox Grid.Row="1" Grid.Column="4" 
                          materialDesign:HintAssist.Hint="Gesamt (€)"
                          Text="{Binding NewGesamt, Converter={StaticResource EuroConverter}}"
                          Style="{StaticResource MaterialDesignOutlinedTextBox}"
                          Height="50"
                          Margin="5,10,0,0"
                          IsReadOnly="True"
                          Background="LightGray"/>
             </Grid>
         </GroupBox>
        
        <!-- Positions DataGrid -->
        <DataGrid Grid.Row="2" 
                  ItemsSource="{Binding Positionen}"
                  SelectedItem="{Binding SelectedPosition}"
                  Style="{StaticResource MaterialDesignDataGrid}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  CanUserResizeColumns="False"
                  CanUserReorderColumns="False"
                  HeadersVisibility="All"
                  SelectionMode="Single"
                  SelectionUnit="FullRow"
                  IsReadOnly="True"
                  GridLinesVisibility="All"
                  HorizontalGridLinesBrush="#E0E0E0"
                  VerticalGridLinesBrush="#E0E0E0"
                  Background="White"
                  BorderBrush="#CCCCCC"
                  BorderThickness="1"
                  AlternationCount="2"
                  Margin="0,10">
            
            <DataGrid.RowStyle>
                <Style TargetType="DataGridRow" BasedOn="{StaticResource MaterialDesignDataGridRow}">
                    <Setter Property="Background" Value="White"/>
                    <Setter Property="Height" Value="35"/>
                    <Setter Property="BorderThickness" Value="0"/>
                    <Setter Property="Margin" Value="0"/>
                    <Setter Property="FontSize" Value="12"/>
                    <Setter Property="FontFamily" Value="Segoe UI"/>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#F5F5F5"/>
                        </Trigger>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="#E3F2FD"/>
                            <Setter Property="Foreground" Value="Black"/>
                        </Trigger>
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="AlternationIndex" Value="1"/>
                                <Condition Property="IsSelected" Value="False"/>
                            </MultiTrigger.Conditions>
                            <Setter Property="Background" Value="#FAFAFA"/>
                        </MultiTrigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.RowStyle>
            
            <DataGrid.CellStyle>
                <Style TargetType="DataGridCell">
                    <Setter Property="Focusable" Value="False"/>
                    <Setter Property="IsTabStop" Value="False"/>
                    <Setter Property="BorderThickness" Value="0"/>
                    <Setter Property="Padding" Value="8,6"/>
                    <Setter Property="VerticalAlignment" Value="Center"/>
                    <Setter Property="FontSize" Value="12"/>
                    <Setter Property="FontFamily" Value="Segoe UI"/>
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="DataGridCell">
                                <Border Background="{Binding RelativeSource={RelativeSource AncestorType=DataGridRow}, Path=Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}">
                                    <ContentPresenter HorizontalAlignment="Left"
                                                    VerticalAlignment="Center"
                                                    Margin="{TemplateBinding Padding}"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </DataGrid.CellStyle>
            
            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="#E3F2FD"/>
                    <Setter Property="Foreground" Value="Black"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                    <Setter Property="FontSize" Value="12"/>
                    <Setter Property="FontFamily" Value="Segoe UI"/>
                    <Setter Property="Padding" Value="8,10"/>
                    <Setter Property="BorderThickness" Value="0,0,1,0"/>
                    <Setter Property="BorderBrush" Value="#BBDEFB"/>
                    <Setter Property="Height" Value="40"/>
                    <Setter Property="VerticalAlignment" Value="Center"/>
                    <Setter Property="HorizontalAlignment" Value="Left"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="DataGridColumnHeader">
                                <Border Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}">
                                    <ContentPresenter HorizontalAlignment="Left"
                                                    VerticalAlignment="Center"
                                                    Margin="{TemplateBinding Padding}"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </DataGrid.ColumnHeaderStyle>
            
            <DataGrid.Columns>
                <DataGridTextColumn Header="Pos." Binding="{Binding Position}" Width="80">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Center"/>
                            <Setter Property="FontWeight" Value="Medium"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                
                <DataGridTextColumn Header="Beschreibung" Binding="{Binding Beschreibung}" Width="*">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Left"/>
                            <Setter Property="TextWrapping" Value="NoWrap"/>
                            <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                
                <DataGridTextColumn Header="Länge" Binding="{Binding Länge, Converter={StaticResource UnitConverter}}" Width="100">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Right"/>
                            <Setter Property="FontFamily" Value="Consolas"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                
                <DataGridTextColumn Header="Breite" Binding="{Binding Breite, Converter={StaticResource UnitConverter}}" Width="100">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Right"/>
                            <Setter Property="FontFamily" Value="Consolas"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                
                <DataGridTextColumn Header="Höhe" Binding="{Binding Höhe, Converter={StaticResource UnitConverter}}" Width="100">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Right"/>
                            <Setter Property="FontFamily" Value="Consolas"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                
                <DataGridTextColumn Header="Std" Binding="{Binding Std, Converter={StaticResource UnitConverter}}" Width="80">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Right"/>
                            <Setter Property="FontFamily" Value="Consolas"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                
                <DataGridTextColumn Header="Stück" Binding="{Binding Stück, Converter={StaticResource UnitConverter}}" Width="80">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Right"/>
                            <Setter Property="FontFamily" Value="Consolas"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                
                <DataGridTextColumn Header="Lfm" Binding="{Binding Lfm, Converter={StaticResource UnitConverter}}" Width="80">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Right"/>
                            <Setter Property="FontFamily" Value="Consolas"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                
                <DataGridTextColumn Header="Gesamt Menge" Binding="{Binding GesamtMengeDisplay}" Width="150">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Right"/>
                            <Setter Property="FontWeight" Value="Medium"/>
                            <Setter Property="FontFamily" Value="Consolas"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                
                <DataGridTextColumn Header="EP" Binding="{Binding Einzelpreis, Converter={StaticResource EuroConverter}}" Width="100">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Right"/>
                            <Setter Property="FontFamily" Value="Consolas"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                
                <DataGridTextColumn Header="Gesamt" Binding="{Binding Gesamt, Converter={StaticResource EuroConverter}}" Width="120">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Right"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="FontFamily" Value="Consolas"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
        
        <!-- Footer with Total -->
        <Grid Grid.Row="3" Margin="0,20,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <!-- Action Buttons -->
            <StackPanel Grid.Column="0" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Left">
                <Button Content="Bearbeiten" 
                        Command="{Binding EditPositionCommand}"
                        Style="{StaticResource MaterialDesignOutlinedButton}"
                        Margin="0,0,10,0"/>
                <Button Content="Löschen" 
                        Command="{Binding DeletePositionCommand}"
                        Style="{StaticResource MaterialDesignOutlinedButton}"
                        Background="Red"
                        Foreground="White"
                        Margin="0,0,10,0"/>
            </StackPanel>
            
            <!-- Total -->
            <TextBlock Grid.Column="1" 
                       Text="Gesamt:" 
                       FontSize="16" FontWeight="Bold"
                       VerticalAlignment="Center"
                       Margin="0,0,10,0"
                       Foreground="Red"/>
            
            <TextBlock Grid.Column="2" 
                       Text="{Binding GesamtSumme, Converter={StaticResource EuroConverter}}" 
                       FontSize="16" FontWeight="Bold"
                       VerticalAlignment="Center"
                       Background="LightGreen"
                       Padding="10,5"
                       MinWidth="120"
                       TextAlignment="Right"/>
        </Grid>
    </Grid>
</Window>
