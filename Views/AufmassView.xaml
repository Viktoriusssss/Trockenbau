<UserControl x:Class="ModernWPFApp.Views.AufmassView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:converters="clr-namespace:ModernWPFApp.Converters">

    <UserControl.Resources>
        <converters:UnitConverter x:Key="UnitConverter"/>
        <converters:EuroConverter x:Key="EuroConverter"/>
    </UserControl.Resources>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="8"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <!-- Header and Actions -->
        <materialDesign:Card Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Margin="0,0,0,16" Padding="16">
            <DockPanel>
                <StackPanel DockPanel.Dock="Left" Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="Ruler" Width="24" Height="24" 
                                           VerticalAlignment="Center"
                                           Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                    <TextBlock Text="Aufmaßverwaltung" FontSize="20" FontWeight="Medium" 
                              VerticalAlignment="Center" Margin="8,0,0,0"/>
                </StackPanel>

                <StackPanel DockPanel.Dock="Right" 
                           Orientation="Horizontal" 
                           HorizontalAlignment="Right">
                    <Button Style="{StaticResource MaterialDesignRaisedButton}"
                            Margin="8,0,0,0"
                            ToolTip="Neues Aufmaß hinzufügen"
                            Command="{Binding AddAufmassCommand}">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Plus" Width="16" Height="16"/>
                            <TextBlock Text="Neu" Margin="8,0,0,0"/>
                        </StackPanel>
                    </Button>
                </StackPanel>

                <!-- Search Box -->
                <TextBox materialDesign:HintAssist.Hint="Aufmaß suchen..."
                         materialDesign:HintAssist.IsFloating="False"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         Margin="16,0"
                         VerticalAlignment="Center"
                         Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}">
                    <TextBox.InputBindings>
                        <KeyBinding Key="Enter" Command="{Binding SearchCommand}"/>
                    </TextBox.InputBindings>
                </TextBox>
            </DockPanel>
        </materialDesign:Card>

        <!-- Data Grid -->
        <materialDesign:Card Grid.Row="1" Grid.Column="0" 
                            materialDesign:ShadowAssist.ShadowDepth="Depth2"
                            Margin="0,0,8,0">
            <DataGrid x:Name="AufmassDataGrid"
                     materialDesign:DataGridAssist.CellPadding="13 8 8 8"
                     materialDesign:DataGridAssist.ColumnHeaderPadding="8"
                     AutoGenerateColumns="False"
                     CanUserAddRows="False"
                     CanUserResizeColumns="False"
                     CanUserReorderColumns="False"
                     HeadersVisibility="All"
                     SelectionMode="Single"
                     SelectionUnit="FullRow"
                     IsReadOnly="True"
                     ItemsSource="{Binding FilteredAufmasse}"
                     SelectedItem="{Binding SelectedAufmass, UpdateSourceTrigger=PropertyChanged}"
                     GridLinesVisibility="None"
                     SelectionChanged="AufmassDataGrid_SelectionChanged">
                <DataGrid.RowStyle>
                    <Style TargetType="DataGridRow" BasedOn="{StaticResource MaterialDesignDataGridRow}">
                        <Setter Property="Cursor" Value="Hand"/>
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="Height" Value="50"/>
                        <Setter Property="Margin" Value="0,2"/>
                        <EventSetter Event="MouseLeftButtonDown" Handler="DataGridRow_MouseLeftButtonDown"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{DynamicResource MaterialDesignSelection}"/>
                                <Setter Property="materialDesign:ShadowAssist.ShadowDepth" Value="Depth1"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="{DynamicResource PrimaryHueLightBrush}"/>
                                <Setter Property="Foreground" Value="{DynamicResource PrimaryHueMidBrush}"/>
                                <Setter Property="materialDesign:ShadowAssist.ShadowDepth" Value="Depth2"/>
                                <Setter Property="FontWeight" Value="Medium"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.RowStyle>
                
                <DataGrid.CellStyle>
                    <Style TargetType="DataGridCell">
                        <Setter Property="Focusable" Value="False"/>
                        <Setter Property="IsTabStop" Value="False"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Padding" Value="12,8"/>
                        <Setter Property="VerticalAlignment" Value="Center"/>
                        <Setter Property="FontSize" Value="14"/>
                        <Setter Property="Background" Value="Transparent"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=DataGridRow}, Path=IsSelected}" Value="True">
                                <Setter Property="Foreground" Value="{DynamicResource PrimaryHueMidBrush}"/>
                                <Setter Property="Background" Value="Transparent"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.CellStyle>
                
                <DataGrid.ColumnHeaderStyle>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="{DynamicResource PrimaryHueMidBrush}"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="FontWeight" Value="Medium"/>
                        <Setter Property="FontSize" Value="13"/>
                        <Setter Property="Padding" Value="12,12"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Height" Value="45"/>
                        <Setter Property="VerticalAlignment" Value="Center"/>
                    </Style>
                </DataGrid.ColumnHeaderStyle>
                
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" 
                                       Binding="{Binding Id}"
                                       Width="80"
                                       MinWidth="80"
                                       MaxWidth="80"
                                       IsReadOnly="True">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="FontWeight" Value="Medium"/>
                                <Setter Property="TextAlignment" Value="Center"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    
                    <DataGridTextColumn Header="Nummer" 
                                       Binding="{Binding Nummer}"
                                       Width="120"
                                       IsReadOnly="True"/>
                    
                    <DataGridTextColumn Header="Titel" 
                                       Binding="{Binding Titel}"
                                       Width="200"
                                       IsReadOnly="True"/>
                    
                    <DataGridTextColumn Header="Status" 
                                       Binding="{Binding Status}"
                                       Width="120"
                                       IsReadOnly="True"/>
                    
                    <DataGridTextColumn Header="Datum" 
                                       Binding="{Binding AufmassAm, StringFormat=dd.MM.yyyy}"
                                       Width="100"
                                       IsReadOnly="True"/>
                    
                    <DataGridTextColumn Header="Positionen" 
                                       Binding="{Binding Positionen.Count}"
                                       Width="100"
                                       IsReadOnly="True"/>
                </DataGrid.Columns>
            </DataGrid>
        </materialDesign:Card>

        <!-- Aufmaß Details Panel -->
        <materialDesign:Card Grid.Row="1" Grid.Column="2" Margin="8,0,0,0" 
                            materialDesign:ShadowAssist.ShadowDepth="Depth3">
            <Grid Margin="16">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Details Header -->
                <Border Grid.Row="0" 
                        Background="{DynamicResource PrimaryHueLightBrush}"
                        CornerRadius="4"
                        Padding="12,8"
                        Margin="0,0,0,16">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Ruler" 
                                               Width="24" 
                                               Height="24" 
                                               VerticalAlignment="Center"
                                               Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                        <TextBlock Text="Aufmaß Details" 
                                  FontSize="18" 
                                  FontWeight="Medium" 
                                  VerticalAlignment="Center"
                                  Margin="8,0,0,0"
                                  Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                    </StackPanel>
                </Border>

                <!-- Details Content -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <!-- No Aufmaß Selected -->
                        <StackPanel Visibility="{Binding IsAufmassSelected, Converter={StaticResource InverseBooleanToVisibilityConverter}}"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center"
                                  Margin="0,40">
                            <materialDesign:PackIcon Kind="Ruler" 
                                                   Width="48" 
                                                   Height="48" 
                                                   Foreground="{DynamicResource MaterialDesignBodyLight}"
                                                   HorizontalAlignment="Center"
                                                   Margin="0,0,0,16"/>
                            <TextBlock Text="Bitte wählen Sie ein Aufmaß aus der Liste aus."
                                      Foreground="{DynamicResource MaterialDesignBodyLight}"
                                      TextWrapping="Wrap"
                                      HorizontalAlignment="Center"
                                      FontSize="14"/>
                        </StackPanel>

                        <!-- Aufmaß Details -->
                        <StackPanel Visibility="{Binding IsAufmassSelected, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <!-- ID -->
                            <Border Background="{DynamicResource MaterialDesignCardBackground}"
                                    CornerRadius="4"
                                    Padding="12,8"
                                    Margin="0,0,0,12">
                                <StackPanel>
                                    <TextBlock Text="ID" FontWeight="Bold" FontSize="12" 
                                             Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                                    <TextBlock Text="{Binding SelectedAufmass.Id}" FontSize="16" FontWeight="Medium"/>
                                </StackPanel>
                            </Border>

                            <!-- Nummer -->
                            <Border Background="{DynamicResource MaterialDesignCardBackground}"
                                    CornerRadius="4"
                                    Padding="12,8"
                                    Margin="0,0,0,12">
                                <StackPanel>
                                    <TextBlock Text="Nummer" FontWeight="Bold" FontSize="12" 
                                             Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                                    <TextBlock Text="{Binding SelectedAufmass.Nummer}" FontSize="16" FontWeight="Medium"/>
                                </StackPanel>
                            </Border>

                            <!-- Titel -->
                            <Border Background="{DynamicResource MaterialDesignCardBackground}"
                                    CornerRadius="4"
                                    Padding="12,8"
                                    Margin="0,0,0,12">
                                <StackPanel>
                                    <TextBlock Text="Titel" FontWeight="Bold" FontSize="12" 
                                             Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                                    <TextBlock Text="{Binding SelectedAufmass.Titel}" FontSize="16" FontWeight="Medium"/>
                                </StackPanel>
                            </Border>

                            <!-- Beschreibung -->
                            <Border Background="{DynamicResource MaterialDesignCardBackground}"
                                    CornerRadius="4"
                                    Padding="12,8"
                                    Margin="0,0,0,12">
                                <StackPanel>
                                    <TextBlock Text="Beschreibung" FontWeight="Bold" FontSize="12" 
                                             Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                                    <TextBlock Text="{Binding SelectedAufmass.Beschreibung}" FontSize="16" FontWeight="Medium"
                                             TextWrapping="Wrap"/>
                                </StackPanel>
                            </Border>

                            <!-- Status -->
                            <Border Background="{DynamicResource MaterialDesignCardBackground}"
                                    CornerRadius="4"
                                    Padding="12,8"
                                    Margin="0,0,0,12">
                                <StackPanel>
                                    <TextBlock Text="Status" FontWeight="Bold" FontSize="12" 
                                             Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                                    <TextBlock Text="{Binding SelectedAufmass.Status}" FontSize="16" FontWeight="Medium"/>
                                </StackPanel>
                            </Border>

                            <!-- Datum -->
                            <Border Background="{DynamicResource MaterialDesignCardBackground}"
                                    CornerRadius="4"
                                    Padding="12,8"
                                    Margin="0,0,0,12">
                                <StackPanel>
                                    <TextBlock Text="Aufmaß am" FontWeight="Bold" FontSize="12" 
                                             Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                                    <TextBlock Text="{Binding SelectedAufmass.AufmassAm, StringFormat=dd.MM.yyyy}" FontSize="16" FontWeight="Medium"/>
                                </StackPanel>
                            </Border>

                            <!-- Positionen Count -->
                            <Border Background="{DynamicResource MaterialDesignCardBackground}"
                                    CornerRadius="4"
                                    Padding="12,8"
                                    Margin="0,0,0,20">
                                <StackPanel>
                                    <TextBlock Text="Positionen" FontWeight="Bold" FontSize="12" 
                                             Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                                    <TextBlock Text="{Binding SelectedAufmass.Positionen.Count}" FontSize="16" FontWeight="Medium"/>
                                </StackPanel>
                            </Border>

                            <!-- Action Buttons -->
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                                <Button Content="BEARBEITEN"
                                        Style="{StaticResource MaterialDesignRaisedButton}"
                                        Command="{Binding EditAufmassCommand}"
                                        CommandParameter="{Binding SelectedAufmass}"
                                        Margin="0,0,8,0"/>
                                <Button Content="LÖSCHEN"
                                        Style="{StaticResource MaterialDesignOutlinedButton}"
                                        Command="{Binding DeleteAufmassCommand}"
                                        CommandParameter="{Binding SelectedAufmass}"/>
                            </StackPanel>

                            <!-- Position Management Button -->
                            <Button Content="POSITIONEN VERWALTEN"
                                    Style="{StaticResource MaterialDesignRaisedButton}"
                                    Command="{Binding OpenPositionManagementCommand}"
                                    CommandParameter="{Binding SelectedAufmass}"
                                    Background="{DynamicResource PrimaryHueMidBrush}"
                                    Foreground="White"
                                    Height="45"
                                    FontSize="14"
                                    FontWeight="Medium"/>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </materialDesign:Card>
    </Grid>
</UserControl>
