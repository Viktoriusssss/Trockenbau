<UserControl x:Class="ModernWPFApp.Views.LVView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">
    <Grid Margin="16">
        <materialDesign:Card Padding="16">
            <StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                    <materialDesign:PackIcon Kind="FormatListNumbered" Width="24" Height="24" VerticalAlignment="Center" Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                    <TextBlock Text="Leistungsverzeichnis (LV)" FontSize="20" FontWeight="Medium" VerticalAlignment="Center" Margin="8,0,0,0"/>
                </StackPanel>
                <TextBlock Text="Hier kÃ¶nnen Sie Leistungsverzeichnisse erstellen und verwalten." Margin="0,0,0,16"/>
                <Button Style="{StaticResource MaterialDesignRaisedButton}" HorizontalAlignment="Left">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Plus" Width="16" Height="16"/>
                        <TextBlock Text="Neues LV" Margin="8,0,0,0"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </materialDesign:Card>
    </Grid>
</UserControl>
